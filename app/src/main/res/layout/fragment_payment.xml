<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent" android:layout_width="match_parent">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/leftblack"
            android:layout_alignParentStart="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_below="@+id/rel"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You deserve better meal"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Ordered"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/lay1"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/basess"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burger With Meat"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14 items"
                android:textColor="@color/lightgrey"
                android:gravity="end"
                android:layout_marginEnd="32dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12345"
                android:textColor="@color/cus_col"
                android:textStyle="bold"
                android:drawableStart="@drawable/baseline_currency_rupee_24"
                android:layout_marginStart="5dp"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay2"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        >
        <TextView
            android:id="@+id/tvdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details Transaction"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/downblk"
            android:layout_alignParentEnd="true"
            />

        <LinearLayout
            android:layout_below="@+id/tvdetails"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driver :"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180,000"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/baseline_currency_rupee_24"
                />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>







</RelativeLayout>